{
    "name": "key-values-vscode",
    "displayName": "KeyValues.vscode",
    "description": "Language support for KeyValues (also called Valve Data Format).",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "keyvalues",
                "aliases": [
                    "KeyValues",
                    "keyvalues",
                    "VDF",
                    "Valve Data Format"
                ],
                "extensions": [
                    ".txt",
                    ".vdf"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "keyvalues",
                "scopeName": "source.keyvalues",
                "path": "./syntaxes/keyvalues.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "build": "tsc"
    },
    "dependencies": {
        "key-values-ts": "^0.3.1",
        "vscode-languageserver": "^6.1.1",
        "vscode-languageserver-textdocument": "^1.0.1",
        "vscode-languageserver-types": "^3.15.1",
        "vscode-uri": "^2.1.2"
    },
    "devDependencies": {
        "@types/node": "^14.0.13"
    }
}
